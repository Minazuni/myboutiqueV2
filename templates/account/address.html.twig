{% extends 'base.html.twig' %}

{% block title %}Mes adresses
{% endblock %}

{% block content %}

	<h1 class="mt-3">Mes Adresses</h1>

	<p>Dans cet espace , vous gérez vos adresses</p>
	<a class="btn btn-primary"href="{{path('account_add_address')}}">Ajouter une nouvelle adresse</a>
	<hr>


	<div class="row">
		{% for address in app.user.addresses %}

			<div
				class="col-md-4 mb-4">
				<!-- Ajoute la classe mb-4 pour une marge en bas -->
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">{{ address.name }}</h5>
						<p class="card-text">{{ address.address }}<br>{{ address.postal }}
							-
							{{ address.city }}</p>
						<a href="{{ path('account_edit_address', {'id': address.id}) }}" class="btn btn-primary">Modifier</a>
						<a href="{{ path('account_delete_address', {'id': address.id}) }}" class="btn btn-danger" onclick="return confirm('êtes-vous sur ?')">Supprimer</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>


	<a class="btn btn-primary" href="{{path('account')}}">Retour à votre compte</a><br>
{% endblock %}
